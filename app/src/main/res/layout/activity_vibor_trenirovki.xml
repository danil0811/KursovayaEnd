<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vibortrenirovki"
    tools:context=".ActivityViborTrenirovki">

    <Button
        android:id="@+id/GoToKardio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:text="Кардио тренировки "
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/GoToGym"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/GoToKardio"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp"
        android:text="Силовые тренировки"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>

</RelativeLayout>